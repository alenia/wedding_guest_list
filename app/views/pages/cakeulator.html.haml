%form
  %fieldset
    %label spacing
    %input#spacing{type: :range, min: 1, max: 40, value: 3}
  %fieldset
    %label unit height
    %input#unit{type: :range, min: 1, max: 20, value: 3}
  %fieldset
    %label tiers height multiplier
    %input#tiers{type: :range, min: 5, max: 45, value: 25}
  %fieldset
    %label tier 1 height
    %input#first{type: :range, min: 4, max: 5, value: 4}
    %label tier 2 height
    %input#second{type: :range, min: 4, max: 5, value: 4}
    %label tier 3 height
    %input#third{type: :range, min: 4, max: 5, value: 4}
%section
  .tiers.straight
    .first
    .second
    .third
  .stripes
    %ol
      - 10.times do
        %li
%section
  .tiers.angle
    .first
      .cakebottom
    .second
      .cakebottom
    .third
      .cakebottom
